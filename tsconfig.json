{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "lib": [
      "es2022",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "preserveValueImports": false,
    "isolatedModules": true,
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
